<template>
  <label>
    <input type="radio" name="options" />
    <span class="radio"></span>
    <span class="label">Last option</span>
  </label>
</template>

<script>
  module.exports = {
    data: {
      swiper: null,
    },
    created: function () {
      const label = this.$el.querySelectorAll('.label')[0]
      const chars = label.textContent.split('')
      label.innerHTML = ''
      chars.forEach(char => {
        label.innerHTML += `<span>${char === ' ' ? '&nbsp' : char}</span>` 
      })
    }
  }
</script>


