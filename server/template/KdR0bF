<template>
  <div class="switch-bar">
    <div class="title-bar">
      <span class="active title-bar-item">资讯</span>
      <span class="title-bar-item">政策解读</span>
      <div class="more">
        <a target="_blank" href="#"></a>
      </div>
    </div>
    <div class="consultation-panel">
      <div class="consultation-bar index-1">
        内容1
      </div>
      <div class="consultation-bar index-2">
        内容2
      </div>
      <div class="clear"></div>
    </div>
  </div>
</template>

<script>
  module.exports = {
    data: {
      activeIndex: 0
    },
    created: function () {
      const switchBarWidth = this.$el.offsetWidth
      const titleItem = this.$el.getElementsByClassName('title-bar-item')
      const consultationBar = this.$el.getElementsByClassName('consultation-bar')
      function clear () {
        for (let index = 0; index < titleItem.length; index++) {
          const element = titleItem[index]
          element.classList.remove('active')
        }
      }
      for (let index = 0; index < titleItem.length; index++) {
        const element = titleItem[index]
        element.onclick = function (event) {
          const el = event.target
          clear()
          el.classList.add('active')
          // 让显示区域滚动到指定位置
          panel.style.left = (-index * switchBarWidth) + 'px'
        }
      }

      for (let index = 0; index < consultationBar.length; index++) {
        const element = consultationBar[index]
        element.style.width = switchBarWidth + 'px'
      }
      const panel = document.getElementsByClassName('consultation-panel')[0]
      panel.style.width = (panel.children.length - 1) * switchBarWidth + 'px'
    }
  }
</script>

<style lang="less">
.switch-bar {
  overflow: hidden;
  position: relative;
  height: 416px;
}
.title-bar {
  font-size: 21px;
  position: relative;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
}
.active {
  background-color: #ce262a;
  color: white;
}
.title-bar-item {
  cursor: pointer;
  width: 120px;
  display: inline-block;
  text-align: center;
  line-height: 50px;
  letter-spacing: 5px;
}
.consultation-panel {
  left: 0;
  height: 364px;
  position: absolute;
  transition: left 0.3s linear;
}
.consultation-bar {
  height: 100%;
  float: left;
}
// 查看更多
.more {
  background-image: url('@&more.png&');
  width: 50px;
  height: 12px;
  position: absolute;
  right: 15px;
  top: 0;
  bottom: 0;
  margin: auto;
  cursor: pointer;
  a {
    display: block;
    width: 100%;
    height: 100%;
  }
}
</style>