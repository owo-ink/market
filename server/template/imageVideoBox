<template lang="pug">
.image-video-box
  img.show-image(src="<<showImg>>")
  video(src="<<videoSrc>>" controls="controls" playsinline)
  .play-button-box
    img.play-button(src="https://puge-10017157.cos.ap-shanghai.myqcloud.com/ozzx/resource/play-button.png", :tap="play")
</template>

<script>
  module.exports = {
    created: function () {
    },
    play: function () {
      owo.query('.show-image')[0].style.display = 'none'
      owo.query('.play-button-box')[0].style.display = 'none'
      owo.query('video')[0].play()
    },
    pause: function () {
      owo.query('video')[0].pause()
      owo.query('.play-button-box')[0].style.display = 'block'
    },
    ended: function () {
      owo.query('.play-button-box')[0].style.display = 'block'
    }
  }
</script>


<style lang="less">
.image-video-box {
  width: <<width>>;
  height: <<height>>;
  overflow: hidden;
  position: relative;
  video, .play-button-box {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .show-image {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 2;
  }
  .play-button-box {
    z-index: 3;
    background-color: rgba(0, 0, 0, 0.6);
  }
  .play-button {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    cursor: pointer;
  }
}
</style>