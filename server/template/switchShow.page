<template>
  <div class="swiper-box">
    <div class="swiper-container" id="auto-swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide card" @for="value in swiperList">
          <div class="swiper-item" >
            <a href="#">
              <img src="{{value.image}}"/>
              <div class="image-title">{{value.title}}</div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <img src="{{--rightIcon--}}" class="swiper-button swiper-button-next" @click="swiperNext"/>
    <img src="{{--leftIcon--}}" class="swiper-button swiper-button-prev" @click="swiperPrev"/>
  </div>
</template>

<script>
  module.exports = {
    created: function () {
      this.data.swiper = new Swiper('#auto-swiper', {{--swiperSetting--}})
    },
    data: {
      swiper: null,
      swiperList: {{--swiperList--}}
    },
    methods: {
      swiperNext: function () {
        // console.log('swiperNext')
        this.data.swiper.swipeNext()
      },
      swiperPrev: function () {
        // console.log('swiperPrev')
        this.data.swiper.swipePrev()
      }
    }
  }
</script>

