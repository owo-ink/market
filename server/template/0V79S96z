  module.exports = {
    play: function () {
      const videoBox = document.getElementsByClassName('video-box')[0]
      const cover = videoBox.getElementsByClassName('cover')[0]
      cover.style.display = 'none'
      videoBox.getElementsByTagName('video')[0].play()
    }
  }
</script>

