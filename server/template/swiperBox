      ]
    },
    created: function () {
      // 轮播图展示区域swiper
      setTimeout(() => {
        new Swiper(owo.query('.swiper-container')[0], {
          pagination: owo.query('.pagination')[0],
          paginationClickable: true
        })
      }, 0)
    }
  }
</script>


